html:
    padding 10px
body:
    color black
    width 75%
    margin-top 20px
    display block

span:
    font-size 20px
    color red

h1:
    .red:
        color red
    .blue:
        color blue
        @media mobile:
            color navy
        @media tablet:
            color cyan
        @media 69:
            color aqua
    .green:
        &.large:
            color green
            font-size 30px
            -webkit-filter 1px solid grey
    .orange:
        ::before:
            text-decoration underline

div:
    color blue
    .balls:
        color @yellow
        .tickets:
            color @orange
